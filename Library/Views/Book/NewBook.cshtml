<div ng-app="library" ng-controller="bookController">
    <h3>
        {{type}}
    </h3>
    <hr />
    <div class="col-md-6">
        <div class="alert alert-danger" role="alert" ng-show="hasMessage">
            {{message}}
        </div>
        <form role="form" style="max-width: 500px;">
            <div class="form-group">
                <label for="title">
                    Título
                </label>
                <input type="text" class="form-control" id="title" ng-model="title" placeholder="Título" maxlength="150"/>
            </div>
            <div class="form-group">
                <label for="description">
                    Descrição
                </label>
                <textarea type="text" class="form-control" id="description" ng-model="description" placeholder="Descrição" maxlength="255"> </textarea>
            </div>
            <div class="form-group">
                <label for="author">
                    Autor
                </label>
                <input type="text" class="form-control" id="author" ng-model="author" placeholder="Autor" maxlength="150"/>
            </div>
            <div class="form-group">
                <label for="tradutor">
                    Tradutor
                </label>
                <input type="text" class="form-control" id="tradutor" ng-model="tradutor" placeholder="Tradutor" maxlength="150"/>
            </div>
            <div class="form-group">
                <label for="launch">
                    Data de lançamento
                </label>
                <input type="date" class="form-control" id="launch" ng-model="launch" placeholder="Data de lançamento"/>
            </div>
            <div class="form-group">
                <label for="price">
                    Preço
                </label>
                <input type="text" class="form-control" id="price" ng-model="price" placeholder="Preço"/>
            </div>
            <div class="form-group">
                <label for="language">
                    Linguagem
                </label>
                <select ng-model="language" class="form-control" id="language">
                    <option value="PT">Português</option>
                    <option value="EN">Inglês</option>
                </select>
            </div>
            <div class="form-group">
                <label for="publishingCompany">
                    Editora
                </label>
                <input type="text" class="form-control" id="publishingCompany" ng-model="publishingCompany" placeholder="Editora" maxlength="200"/>
            </div>
            <div class="form-group">
                <label for="width">
                    Largura
                </label>
                <input type="text" class="form-control" id="width" ng-model="width" placeholder="Largura"/>
            </div>
            <div class="form-group">
                <label for="height">
                    Altura
                </label>
                <input type="text" class="form-control" id="height" ng-model="height" placeholder="Altura"/>
            </div>
            <a href="~/" class="btn btn-info">Cancelar</a>
            <button type="submit" class="btn btn-default" ng-click="save()">
                Salvar
            </button>
        </form>
    </div>
</div>